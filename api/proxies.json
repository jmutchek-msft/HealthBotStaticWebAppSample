{
  "$schema": "http://json.schemastore.org/proxies",
  "proxies": {
      "proxy1": {
          "matchCondition": {
              "methods": [ "POST" ],
              "route": "/api/token"
          },
          "backendUri": "https://directline.botframework.com/v3/directline/tokens/generate",
          "requestOverrides": {
            "backend.request.headers.Authorization": "Bearer %DL_SECRET%"
          }

      }
  }
}